<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
<li><%= devise_error_messages! %></li>
<li><%= f.hidden_field :reset_password_token %></li>
<li><%= f.label :password %><%= f.password_field :password %></li>
<li><%= f.label :password_confirmation %><%= f.password_field :password_confirmation %></li>
<li><%= f.submit "Change my password" %></li>
<% end %>
<%= render :partial => "devise/shared/links" %>